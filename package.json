{
  "name": "@fwrlines/template-now-storybook",
  "version": "1.0.1-0",
  "repository": {
    "type": "git",
    "url": "https://github.com/fwrlines/template-now-storybook"
  },
  "description": "A simple template repo to initialize storybook with react, ready to be npm-published as esm/cjs, and ready to be uploaded to zeit now.",
  "main": "dist/cjs/index.js",
  "module": "dist/es/index.js",
  "scripts": {
    "storybook": "LOCAL=true start-storybook -p 6006 -s ./src/scss/fonts,./src/scss/images",
    "clone-scss": "git clone https://github.com/fwrlines/scss.git ./src/scss",
    "now-build": "npm run clone-scss && mkdir ./public && npm run build-storybook --quiet",
    "build": "echo",
    "build-storybook": "rm -rf ./public/* && build-storybook -c .storybook -o public --quiet -s ./src/scss/fonts,./src/scss/images",
    "copy-css:cjs": "rsync -a --prune-empty-dirs --include '*/' --include '*.scss' --exclude '*' src/ui/ dist/cjs/",
    "copy-css:es": "rsync -a --prune-empty-dirs --include '*/' --include '*.scss' --exclude '*' src/ui/ dist/es/",
    "compile:cjs": "NODE_ENV=cjs babel src/ui --out-dir dist/cjs --ignore **/stories/*.js",
    "compile:es": "NODE_ENV=es babel src/ui --out-dir dist/es --ignore **/stories/*.js",
    "build:cjs": "npm run compile:cjs && npm run copy-css:cjs",
    "build:es": "npm run compile:es && npm run copy-css:es",
    "compile": "npm run pre-compile && npm run build:cjs && npm run build:es",
    "compile:show": "npm run compile && tree dist",
    "pre-compile": "rm -rf ./dist",
    "pub": "npm run commit && npm version patch && npm publish",
    "prepare": "npm run compile",
    "commit": "git add . && git commit -m 'Version bump' && git push",
    "bd": "npm run build&&npm run commit "
  },
  "keywords": [],
  "author": {
    "name": "fwrlines",
    "email": "adrian@fwrlines.com",
    "url": "https://github.com/fwrlines"
  },
  "license": "ISC",
  "dependencies": {
    "react": "^16.12.0",
    "react-dom": "^16.12.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.7",
    "@babel/core": "^7.7.7",
    "@babel/plugin-proposal-class-properties": "^7.7.4",
    "@babel/preset-env": "^7.7.7",
    "@storybook/addon-actions": "^5.2.8",
    "@storybook/addon-docs": "^5.2.8",
    "@storybook/addon-links": "^5.2.8",
    "@storybook/addon-storyshots": "^5.2.8",
    "@storybook/addons": "^5.2.8",
    "@storybook/react": "^5.2.8",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babel-plugin-add-module-exports": "^1.0.2",
    "babel-plugin-inline-import": "^3.0.0",
    "babel-plugin-module-resolver": "^4.0.0",
    "css-loader": "^3.4.0",
    "eslint": "^6.8.0",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "node-sass": "^4.13.0",
    "sass-loader": "^8.0.0",
    "style-loader": "^1.1.1",
    "stylelint": "^12.0.0",
    "stylelint-config-palantir": "^4.0.1",
    "stylelint-scss": "^3.13.0"
  }
}
